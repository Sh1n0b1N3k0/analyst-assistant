FROM python:3.11-slim

WORKDIR /app

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Обновление pip и установка wheel для компиляции пакетов
RUN pip install --upgrade pip setuptools wheel

# Копирование requirements (используем версию без тестов)
COPY requirements-docker.txt requirements.txt

# Установка Python зависимостей по частям для диагностики
# Базовые пакеты
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic==2.5.0 \
    pydantic-settings==2.1.0

# Database пакеты
RUN pip install --no-cache-dir \
    sqlalchemy==2.0.23 \
    alembic==1.12.1 \
    psycopg2-binary==2.9.9 \
    neo4j==5.14.1

# Supabase пакеты
RUN pip install --no-cache-dir \
    supabase==2.0.3 \
    postgrest==0.13.0 \
    realtime==1.0.0 \
    pgvector==0.2.3

# Langchain пакеты - пробуем без версий (pip выберет совместимые)
# Если это не работает, закомментируйте эту секцию и используйте без langchain
RUN pip install --no-cache-dir \
    langchain \
    langchain-core \
    langchain-community \
    langchain-openai \
    langchain-anthropic || \
    (echo "WARNING: Langchain packages failed. Continuing without them..." && \
     echo "You may need to install langchain packages manually or use different versions")

# AI провайдеры
RUN pip install --no-cache-dir \
    openai==1.12.0 \
    anthropic==0.25.0 \
    tiktoken==0.7.0 \
    ollama==0.1.7

# Утилиты
RUN pip install --no-cache-dir \
    python-dotenv==1.0.0 \
    python-multipart==0.0.6 \
    httpx==0.25.2 \
    passlib[bcrypt]==1.7.4 \
    python-jose[cryptography]==3.3.0

# Копирование кода приложения
COPY . .

# Открыть порт
EXPOSE 8000

# Запуск приложения
CMD ["uvicorn", "api_gateway.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
